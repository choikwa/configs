[user]
  email = code.kchoi@gmail.com
  name = choikwa

[alias]
  hist = log --pretty=format:\"%w(120)%C(cyan)%h %<(18,trunc)%ai %C(red)%an:%ae %C(green)%s%n%b\" --graph --name-status
  rekt = push
  up = push
  down = pull
  st = status --column
  sf = add -u -v    ;stage files
  cm = commit -a -m ;stage and commit affected, tracked files, needs msg
  ls = ls-files
  br = branch -vv
  rem = remote -vv
  ch = checkout
  gud = help
[push]
  default = upstream
[core]
  editor = vim
